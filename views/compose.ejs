<%- include("partials/header"); %>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <div class="form-group">
            <label class="form-label" for="newTitle"><strong>Title</strong></label>
            <input class="form-control" type="text" name="postTitle">
        </div>

        <div class="form-group">
            <label class="form-label" for="newPost"><strong>Post</strong></label>
            <textarea class="form-control" rows="5" type="text" name="postBody"></textarea>
        </div>

        <button class="btn btn-primary" type="submit">Publish</button>
    </form>

    <%- include("partials/footer"); %>